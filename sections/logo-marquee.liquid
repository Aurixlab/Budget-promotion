                    src="{{ block.settings.logo_image | img_url: '300x' }}" 
                    alt="{{ block.settings.logo_alt | default: 'Logo' }}"
                    class="logo-marquee__image"
                    loading="lazy"
                  >
                {% endif %}
              {% else %}
                <div style="width: 100%; height: 100%; background: #f0f0f0; display: flex; align-items: center; justify-content: center; font-size: 12px; color: #999;">
                  Logo {{ forloop.index }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}

        {% comment %} Third set for extra smoothness {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'logo' %}
            <div class="logo-marquee__item" aria-hidden="true">
              {% if block.settings.logo_image != blank %}
                {% if block.settings.logo_link != blank %}
                  <a href="{{ block.settings.logo_link }}" target="_blank" rel="noopener">
                    <img 
                      src="{{ block.settings.logo_image | img_url: '300x' }}" 
                      alt="{{ block.settings.logo_alt | default: 'Logo' }}"
                      class="logo-marquee__image"
                      loading="lazy"
                    >
                  </a>
                {% else %}
                  <img 
                    src="{{ block.settings.logo_image | img_url: '300x' }}" 
                    alt="{{ block.settings.logo_alt | default: 'Logo' }}"
                    class="logo-marquee__image"
                    loading="lazy"
                  >
                {% endif %}
              {% else %}
                <div style="width: 100%; height: 100%; background: #f0f0f0; display: flex; align-items: center; justify-content: center; font-size: 12px; color: #999;">
                  Logo {{ forloop.index }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>




<script>
  gsap.registerPlugin(ScrollTrigger);

// Wait for DOM to be ready
document.addEventListener('DOMContentLoaded', function() {
  
  // Logo Marquee Animation
  const logoMarqueeSection = document.querySelector('.logo-marquee-section');
  
  if (logoMarqueeSection) {
    const title = logoMarqueeSection.querySelector('.logo-marquee__title');
    const subtitle = logoMarqueeSection.querySelector('.logo-marquee__subtitle');
    const marqueeWrapper = logoMarqueeSection.querySelector('.logo-marquee__wrapper');
    const logoItems = logoMarqueeSection.querySelectorAll('.logo-marquee__item');
    
    // Set initial states
    gsap.set(logoMarqueeSection, { opacity: 0 });
    if (title) gsap.set(title, { y: 50, opacity: 0 });
    if (subtitle) gsap.set(subtitle, { y: 30, opacity: 0 });
    if (marqueeWrapper) gsap.set(marqueeWrapper, { opacity: 0, scale: 0.95 });
    gsap.set(logoItems, { opacity: 0, scale: 0.8, y: 20 });
    
    // Create main timeline
    const mainTimeline = gsap.timeline({
      scrollTrigger: {
        trigger: logoMarqueeSection,
        start: 'top 80%',
        end: 'top 20%',
        toggleActions: 'play none none none',
        once: true
      }
    });
    
    // Animate section fade in
    mainTimeline.to(logoMarqueeSection, {
      opacity: 1,
      duration: 0.1
    });
    
    // Animate title with elastic bounce
    if (title) {
      mainTimeline.to(title, {
        y: 0,
        opacity: 1,
        duration: 1,
        ease: 'power3.out'
      }, '+=0.2');
    }
    
    // Animate subtitle
    if (subtitle) {
      mainTimeline.to(subtitle, {
        y: 0,
        opacity: 1,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.6');
    }
    
    // Animate marquee wrapper with scale
    if (marqueeWrapper) {
      mainTimeline.to(marqueeWrapper, {
        opacity: 1,
        scale: 1,
        duration: 0.8,
        ease: 'back.out(1.2)'
      }, '-=0.4');
    }
    
    // Animate each logo item with wave effect
    mainTimeline.to(logoItems, {
      opacity: 1,
      scale: 1,
      y: 0,
      duration: 0.3,
      stagger: {
        each: 0.08,
        from: 'start',
        ease: 'power2.out'
      },
      ease: 'back.out(1.5)'
    }, '-=0.5');
    
    // Add continuous floating animation to logos after initial animation
    mainTimeline.add(() => {
      logoItems.forEach((item, index) => {
        gsap.to(item, {
          y: -8,
          duration: 2 + (index % 3) * 0.3,
          repeat: -1,
          yoyo: true,
          ease: 'sine.inOut',
          delay: index * 0.1
        });
      });
    });
    
    // Enhanced hover effects for individual logos
    logoItems.forEach((item) => {
      item.addEventListener('mouseenter', function() {
        gsap.to(this, {
          scale: 1.15,
          rotation: 2,
          duration: 0.4,
          ease: 'back.out(2)'
        });
      });
      
      item.addEventListener('mouseleave', function() {
        gsap.to(this, {
          scale: 1,
          rotation: 0,
          duration: 0.4,
          ease: 'power2.out'
        });
      });
    });
    
    // Add parallax effect to the entire marquee wrapper
    gsap.to(marqueeWrapper, {
      scrollTrigger: {
        trigger: logoMarqueeSection,
        start: 'top bottom',
        end: 'bottom top',
        scrub: 1
      },
      y: -30,
      ease: 'none'
    });
  }
  
});
</script>






