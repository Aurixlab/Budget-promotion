{% comment %}
  Logo Marquee Section with Infinite Scroll
  Add this to your sections folder as 'logo-marquee.liquid'
{% endcomment %}

<style>
  .logo-marquee-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }

  .logo-marquee__container {
    width: 100%;
    margin-bottom: 10px;
  }

  .logo-marquee__title {
    text-align: {{ section.settings.title_alignment }};
    font-size: clamp(1.25rem, 4vw, {{ section.settings.title_size }}px);
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: {% if section.settings.section_subtitle != blank %}{{ section.settings.subtitle_spacing }}px{% else %}{{ section.settings.title_spacing }}px{% endif %};
    text-transform: {{ section.settings.title_transform }};
    padding: 0 2rem;
    letter-spacing: 0;
    margin-top: 0;
  }

  .logo-marquee__subtitle {
    text-align: {{ section.settings.title_alignment }};
    font-size: clamp(1rem, 2.5vw, {{ section.settings.subtitle_size }}px);
    font-weight: {{ section.settings.subtitle_weight }};
    color: {{ section.settings.subtitle_color }};
    margin-bottom: {{ section.settings.title_spacing }}px;
    line-height: 1.6;
    margin-left: {% if section.settings.title_alignment == 'center' %}auto{% else %}0{% endif %};
    margin-right: {% if section.settings.title_alignment == 'center' %}auto{% elsif section.settings.title_alignment == 'right' %}0{% else %}auto{% endif %};
  }

  .logo-marquee__subtitle{
    margin-top: -20px;
    max-width: 100%;
}
  .logo-marquee__wrapper {
    position: relative;
    width: 100%;
    padding-top: 20px;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, black 100px, black calc(100% - 100px), transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 100px, black calc(100% - 100px), transparent);
  }

  /* Gradient overlays for smooth fade effect */
  .logo-marquee__wrapper::before,
  .logo-marquee__wrapper::after {
    display: none;
  }

  .logo-marquee__track {
    display: flex;
    gap: {{ section.settings.logo_spacing }}px;
    width: fit-content;
    animation: marquee {{ section.settings.animation_speed }}s linear infinite;
  }

  .logo-marquee__track:hover {
    {% if section.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  .logo-marquee__item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.logo_width }}px;
    height: {{ section.settings.logo_height }}px;
    padding: 0rem;
    background: {{ section.settings.logo_bg_color }};
    border-radius: {{ section.settings.logo_border_radius }}px;
    border: {{ section.settings.logo_border_width }}px solid {{ section.settings.logo_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .logo-marquee__item:hover {
    transform: translateY(-5px) scale(1.05);
  }

  .logo-marquee__image {
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.logo_fit }};
    filter: {{ section.settings.logo_filter }};
    transition: filter 0.3s ease;
  }

  .logo-marquee__item:hover .logo-marquee__image {
    filter: none;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% / 3));
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .logo-marquee__title {
      padding: 0 1rem;
    }

    .logo-marquee__subtitle {
      padding: 0 1rem;
    }

    .logo-marquee__item {
        width: 120px;
        height: auto;
    }

    .logo-marquee__wrapper {
      mask-image: linear-gradient(to right, transparent, black 50px, black calc(100% - 50px), transparent);
      -webkit-mask-image: linear-gradient(to right, transparent, black 50px, black calc(100% - 50px), transparent);
    }

    .logo-marquee__title {
      margin-bottom: 10px;
    }

    .logo-marquee__track {
      gap: 20px;
    }
    .logo-marquee__subtitle {
    margin-top: -5px;
    font-size: 14px;
    line-height: 18px;
    margin-bottom: 0;
}
  }
</style>

<section class="logo-marquee-section">
  <div class="logo-marquee__container">
    {% if section.settings.section_title != blank %}
      <h2 class="logo-marquee__title">{{ section.settings.section_title }}</h2>
    {% endif %}

    {% if section.settings.section_subtitle != blank %}
      <p class="logo-marquee__subtitle">{{ section.settings.section_subtitle }}</p>
    {% endif %}

    <div class="logo-marquee__wrapper">
      <div class="logo-marquee__track">
        {% comment %} First set of logos {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'logo' %}
            <div class="logo-marquee__item" {{ block.shopify_attributes }}>
              {% if block.settings.logo_image != blank %}
                {% if block.settings.logo_link != blank %}
                  <a href="{{ block.settings.logo_link }}" target="_blank" rel="noopener">
                    <img 
                      src="{{ block.settings.logo_image | img_url: '300x' }}" 
                      alt="{{ block.settings.logo_alt | default: 'Logo' }}"
                      class="logo-marquee__image"
                      loading="lazy"
                    >
                  </a>
                {% else %}
                  <img 
                    src="{{ block.settings.logo_image | img_url: '300x' }}" 
                    alt="{{ block.settings.logo_alt | default: 'Logo' }}"
                    class="logo-marquee__image"
                    loading="lazy"
                  >
                {% endif %}
              {% else %}
                <div style="width: 100%; height: 100%; background: #f0f0f0; display: flex; align-items: center; justify-content: center; font-size: 12px; color: #999;">
                  Logo {{ forloop.index }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}

        {% comment %} Duplicate set for seamless loop {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'logo' %}
            <div class="logo-marquee__item" aria-hidden="true">
              {% if block.settings.logo_image != blank %}
                {% if block.settings.logo_link != blank %}
                  <a href="{{ block.settings.logo_link }}" target="_blank" rel="noopener">
                    <img 
                      src="{{ block.settings.logo_image | img_url: '300x' }}" 
                      alt="{{ block.settings.logo_alt | default: 'Logo' }}"
                      class="logo-marquee__image"
                      loading="lazy"
                    >
                  </a>
                {% else %}
