            {% if section.settings.twitter_url != blank %}
                <a href="{{ section.settings.twitter_url }}" title="Twitter" target="_blank">üê¶</a>
            {% endif %}
        </div>
        {% endif %}

        <div class="coming-soon-back-link">
            <a href="{{ section.settings.back_link | default: '/' }}">‚Üê Back to Home</a>
        </div>
    </div>
</div>

