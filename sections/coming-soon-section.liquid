<style>
    .coming-soon-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .coming-soon-container {
        text-align: center;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 60px 40px;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .coming-soon-icon {
        font-size: 100px;
        margin-bottom: 30px;
        animation: float 3s ease-in-out infinite;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
    }

    .coming-soon-container h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            letter-spacing: 0;
    }

    .coming-soon-subtitle {
        font-size: 1.3rem;
        margin-bottom: 30px;
        opacity: 0.95;
        font-weight: 300;
    }

    .coming-soon-description {
        font-size: 1.1rem;
        margin-bottom: 40px;
        line-height: 1.8;
        opacity: 0.9;
    }

    .coming-soon-features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
        text-align: left;
    }

    .coming-soon-feature {
        background: rgba(255, 255, 255, 0.15);
        padding: 20px;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

    .coming-soon-feature:hover {
        transform: translateY(-5px);
    }

    .coming-soon-feature-icon {
        font-size: 2rem;
        margin-bottom: 10px;
    }

    .coming-soon-feature h3 {
        font-size: 1.1rem;
        margin-bottom: 8px;
    }

    .coming-soon-feature p {
        font-size: 0.9rem;
        opacity: 0.9;
        line-height: 1.5;
    }

    .coming-soon-social-links {
        margin-top: 30px;
    }

    .coming-soon-social-links a {
        color: white;
        font-size: 1.8rem;
        margin: 0 15px;
        text-decoration: none;
        transition: transform 0.3s ease;
        display: inline-block;
    }

    .coming-soon-social-links a:hover {
        transform: scale(1.2);
    }

    .coming-soon-back-link {
        margin-top: 30px;
    }

    .coming-soon-back-link a {
        text-decoration: none;
        font-size: 1rem;
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }

    .coming-soon-back-link a:hover {
        opacity: 1;
    }

    @media (max-width: 768px) {
        .coming-soon-container {
            padding: 40px 25px;
        }
        
        .coming-soon-container h1 {
            font-size: 2.2rem;
        }
        
        .coming-soon-subtitle {
            font-size: 1.1rem;
        }
    }
</style>

<div class="coming-soon-wrapper">
    <div class="coming-soon-container">
        <div class="coming-soon-icon">{{ section.settings.icon | default: 'üëï' }}</div>
        <h1>{{ section.settings.heading | default: 'Coming Soon' }}</h1>
        <p class="coming-soon-subtitle">{{ section.settings.subtitle | default: 'Custom T-Shirt Design Studio' }}</p>
        
        <p class="coming-soon-description">
            {{ section.settings.description | default: "We're crafting an amazing experience where you can design your perfect custom t-shirt. Create unique designs, choose your colors, and bring your imagination to life!" }}
        </p>

        <div class="coming-soon-features">
            <div class="coming-soon-feature">
                <div class="coming-soon-feature-icon">{{ section.settings.feature_1_icon | default: 'üé®' }}</div>
                <h3>{{ section.settings.feature_1_title | default: 'Custom Designs' }}</h3>
                <p>{{ section.settings.feature_1_text | default: 'Create unique t-shirts with our easy-to-use design tools' }}</p>
            </div>
            <div class="coming-soon-feature">
                <div class="coming-soon-feature-icon">{{ section.settings.feature_2_icon | default: 'üåà' }}</div>
                <h3>{{ section.settings.feature_2_title | default: 'Multiple Colors' }}</h3>
                <p>{{ section.settings.feature_2_text | default: 'Choose from a wide range of colors and styles' }}</p>
            </div>
            <div class="coming-soon-feature">
                <div class="coming-soon-feature-icon">{{ section.settings.feature_3_icon | default: '‚ú®' }}</div>
                <h3>{{ section.settings.feature_3_title | default: 'Premium Quality' }}</h3>
                <p>{{ section.settings.feature_3_text | default: 'High-quality prints on comfortable fabrics' }}</p>
            </div>
        </div>

        {% if section.settings.show_social_links %}
        <div class="coming-soon-social-links">
            {% if section.settings.facebook_url != blank %}
                <a href="{{ section.settings.facebook_url }}" title="Facebook" target="_blank">üìò</a>
