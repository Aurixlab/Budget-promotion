<script>
  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', function () {
    // Footer Animation
    const footer = document.querySelector('.custom-footer');

    if (footer) {
      const footerLogo = footer.querySelector('.footer-logo');
      const footerLines = footer.querySelectorAll('.footer-logo-row .line');
      const footerCols = footer.querySelectorAll('.footer-col');
      const footerBottom = footer.querySelector('.footer-bottom');
      const socialIcons = footer.querySelectorAll('.social-icons a');
      const newsletterForm = footer.querySelector('.footer-newsletter');
      const footerComImg = footer.querySelector('.footer-com-img');

      // Set initial states
      gsap.set(footerLogo, { scale: 0.5, opacity: 0, rotation: -10 });
      gsap.set(footerLines, { scaleX: 0, opacity: 0 });
      gsap.set(footerCols, { y: 50, opacity: 0 });
      gsap.set(footerBottom, { y: 30, opacity: 0 });
      gsap.set(socialIcons, { scale: 0, opacity: 0, rotation: 0 });
      if (newsletterForm) gsap.set(newsletterForm, { x: -20, opacity: 0 });
      if (footerComImg) gsap.set(footerComImg, { y: 30, opacity: 0 });

      // Function to check if footer is in viewport
      const isFooterInView = () => {
        const rect = footer.getBoundingClientRect();
        return rect.top < window.innerHeight && rect.bottom >= 0;
      };

      // Function to play footer animation
      const playFooterAnimation = () => {
        // Create main timeline without ScrollTrigger
        const footerTimeline = gsap.timeline();

        // Animate lines expanding (faster)
        footerTimeline.to(footerLines, {
          scaleX: 1,
          opacity: 1,
          duration: 0.5,
          ease: 'power2.out',
          stagger: 0.12,
        });

        // Animate logo with bounce (faster)
        footerTimeline.to(
          footerLogo,
          {
            scale: 1,
            opacity: 1,
            rotation: 0,
            duration: 0.7,
            ease: 'back.out(1.7)',
          },
          '-=0.3'
        );

        // Animate footer columns with stagger (faster)
        footerTimeline.to(
          footerCols,
          {
            y: 0,
            opacity: 1,
            duration: 0.5,
            stagger: 0.1,
            ease: 'power3.out',
          },
          '-=0.4'
        );

        // Animate newsletter form (faster)
        if (newsletterForm) {
          footerTimeline.to(
            newsletterForm,
            {
              x: 0,
              opacity: 1,
              duration: 0.5,
              ease: 'power2.out',
            },
            '-=0.3'
          );
        }

        // Animate social icons with rotation (faster)
        footerTimeline.to(
          socialIcons,
          {
            scale: 1,
            opacity: 1,
            duration: 0.5,
            stagger: 0.08,
            ease: 'back.out(2)',
          },
          '-=0.2'
        );

        // Animate footer bottom (faster)
        footerTimeline.to(
          footerBottom,
          {
            y: 0,
            opacity: 1,
            duration: 0.5,
            ease: 'power2.out',
          },
          '-=0.15'
        );

        // Animate footer-com-img (fade in from bottom)
        if (footerComImg) {
          footerTimeline.to(
            footerComImg,
            {
              y: 0,
              opacity: 1,
              duration: 0.5,
              ease: 'power2.out',
            },
            '-=0.3'
          );
        }
      };

      // Check if footer is already in view (short pages), otherwise wait for scroll
      if (isFooterInView()) {
        // Delay slightly to ensure smooth page load
        setTimeout(playFooterAnimation, 300);
      } else {
        // Use Intersection Observer for better performance
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                playFooterAnimation();
                observer.disconnect(); // Run animation only once
              }
            });
          },
          {
            threshold: 0.1,
            rootMargin: '0px 0px -10% 0px',
          }
        );

        observer.observe(footer);
      }

      // Enhanced hover animations for footer columns (faster)
      footerCols.forEach((col) => {
        const links = col.querySelectorAll('a, p');

        links.forEach((link) => {
          link.addEventListener('mouseenter', function () {
            gsap.to(this, {
              x: 5,
              duration: 0.5,
              ease: 'power2.out',
            });
          });

          link.addEventListener('mouseleave', function () {
            gsap.to(this, {
              x: 0,
              duration: 0.5,
              ease: 'power2.out',
            });
          });
        });
      });

      // Enhanced social icon hover animations (faster)
      socialIcons.forEach((icon) => {
        icon.addEventListener('mouseenter', function () {
          gsap.to(this, {
            scale: 1.2,
            duration: 0.3,
            ease: 'back.out(2)',
          });
        });

        icon.addEventListener('mouseleave', function () {
          gsap.to(this, {
            scale: 1,
            duration: 0.3,
            ease: 'power2.out',
          });
        });
      });

      // Newsletter button hover animation (faster)
      const newsletterButton = footer.querySelector('.footer-newsletter button');
      if (newsletterButton) {
        newsletterButton.addEventListener('mouseenter', function () {
          gsap.to(this, {
            scale: 1.1,
            duration: 0.3,
            ease: 'back.out(2)',
          });
        });

        newsletterButton.addEventListener('mouseleave', function () {
          gsap.to(this, {
            scale: 1,
            duration: 0.3,
            ease: 'power2.out',
          });
        });
      }

      // Newsletter input focus animation (faster)
      const newsletterInput = footer.querySelector('.footer-newsletter input[type="email"]');
      if (newsletterInput) {
        newsletterInput.addEventListener('focus', function () {
          gsap.to(newsletterForm, {
            scale: 1.02,
            boxShadow: '0 4px 20px rgba(0,0,0,0.2)',
            duration: 0.3,
            ease: 'power2.out',
          });
        });

        newsletterInput.addEventListener('blur', function () {
          gsap.to(newsletterForm, {
            scale: 1,
            boxShadow: '0 2px 8px rgba(0,0,0,0.1)',
            duration: 0.3,
            ease: 'power2.out',
          });
        });
      }

      // Continuous subtle animation for footer logo (starts after main animation)
      setTimeout(() => {
        gsap.to(footerLogo, {
          y: -5,
          duration: 2,
          repeat: -1,
          yoyo: true,
          ease: 'sine.inOut',
        });
      }, 1500);
    }
  });
</script>