<style>
  .video-hero {
    position: relative;
    width: 100%;
    height: 80vh;
    overflow: hidden;
    margin-top: -48px;
    transform-origin: top center;
  }

  .video-hero__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-hero__video--mobile {
    display: none;
  }

  .video-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});
    z-index: 1;
  }

  .video-hero__content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
    color: #fff;
  }

  .video-hero__title {
    font-size: clamp(2rem, 5vw, {{ section.settings.title_size }}px);
    font-weight: 700;
    margin-bottom: 1rem;
    max-width: 800px;
  }

  .video-hero__subtitle {
    font-size: clamp(1rem, 2vw, {{ section.settings.subtitle_size }}px);
    margin-bottom: 2rem;
    max-width: 600px;
  }

  .video-hero__button {
    display: inline-block;
    padding: 0.7rem 2.5rem;
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }} !important;
    border-radius: 38px;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    position: absolute !important;
    left: 2%;
    bottom: 8%;
  }

  .video-hero__button:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .video-hero__progress-bar {
    position: absolute;
    bottom: 40px;
    left: 0;
    right: 0;
    height: 4px;
    background-color: rgba(255, 255, 255, 0.3);
    z-index: 3;
    width: 95%;
    margin: 0 auto;
    border-radius: 23px;
  }

  .video-hero__progress {
    height: 100%;
    background-color: {{ section.settings.progress_bar_color }};
    width: 0%;
    transition: width 0.4s linear;
    border-radius: 23px;
  }

  .video-hero__controls {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    z-index: 3;
    display: none;
    gap: 1rem;
  }

  .video-hero__control-btn {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.4);
    color: #fff;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }

  .video-hero__control-btn:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .video-hero__scroll-indicator {
    position: absolute;
    bottom: 6rem;
    right: 3rem;
    z-index: 3;
    width: 1em;
    height: 3.125em;
    transform: scale(2);
    cursor: pointer;
  }

  .video-hero__scroll-indicator .mouse {
    height: 1.375em;
    width: 0.875em;
    border: 1px solid {{ section.settings.button_color }};
    border-radius: 2em;
  }

  .video-hero__scroll-indicator .wheel {
    position: relative;
    display: block;
    height: 0.1875em;
    width: 0.1875em;
    margin: 0.1875em auto 0;
    background: {{ section.settings.button_color }};
    animation: mouse-wheel 1.2s ease infinite;
    border-radius: 50%;
  }

  .video-hero__scroll-indicator .icon-arrows {
    margin-top: 0.5em;
  }

  .video-hero__scroll-indicator .icon-arrows::after,
  .video-hero__scroll-indicator .icon-arrows::before {
    content: '';
  }

  .video-hero__scroll-indicator .icon-arrows span,
  .video-hero__scroll-indicator .icon-arrows::after,
  .video-hero__scroll-indicator .icon-arrows::before {
    display: block;
    width: 0.315em;
    height: 0.315em;
    border-right: 1px solid {{ section.settings.button_color }};
    border-bottom: 1px solid {{ section.settings.button_color }};
    margin: 0 0 0.125em 0.315em;
    transform: rotate(45deg);
    animation: mouse-scroll 1s infinite;
    animation-direction: alternate;
  }

  .video-hero__scroll-indicator .icon-arrows::before {
    margin-top: 0.315em;
    animation-delay: 0.1s;
  }

  .video-hero__scroll-indicator .icon-arrows span {
    animation-delay: 0.2s;
  }

  .video-hero__scroll-indicator .icon-arrows::after {
    animation-delay: 0.3s;
  }

  @keyframes mouse-wheel {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 0;
      transform: translateY(0.375em);
    }
  }

  @keyframes mouse-scroll {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    .video-hero__video--desktop {
      display: none;
    }

    .video-hero__video--mobile {
      display: block;
    }

    .video-hero__controls {
      bottom: 1rem;
      right: 1rem;
    }

    .video-hero__button {
      padding: .5rem 1.5rem;
      bottom: 10%;
      font-size: 14px;
    }

    .video-hero__scroll-indicator {
      right: 1rem;
      transform: scale(1.5);
    }

    .video-hero {
      margin-top: -34px;
    }
  }
</style>

