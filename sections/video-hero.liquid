      </div>
    </div>
  {% endif %}
</section>

<script>
// HOMEPAGE INTRO VIDEO SCRIPT WITH SEQUENTIAL PLAYBACK
document.body.classList.add('playing-intro');

document.addEventListener('DOMContentLoaded', function() {
  const introContainer = document.getElementById('homepage-intro-video');
  const introVideoDesktop = document.getElementById('intro-video-desktop');
  const introVideoMobile = document.getElementById('intro-video-mobile');
  const heroVideoDesktop = document.getElementById('heroVideoDesktop');
  const heroVideoMobile = document.getElementById('heroVideoMobile');

  // Check if intro container exists
  if (!introContainer) {
    // No intro video, start hero video immediately
    startHeroVideo();
    return;
  }

  // Determine which intro video to use based on screen size
  function getActiveIntroVideo() {
    return window.innerWidth <= 768 ? introVideoMobile : introVideoDesktop;
  }

  let activeIntroVideo = getActiveIntroVideo();

  // If no video is available, hide intro and start hero
  if (!activeIntroVideo) {
    introContainer.classList.add('hidden');
    setTimeout(function() {
      introContainer.style.display = 'none';
      document.body.classList.remove('playing-intro');
    }, 800);
    startHeroVideo();
    return;
  }

  // Function to start hero video playback
  function startHeroVideo() {
    const heroVideo = window.innerWidth <= 768 ? heroVideoMobile : heroVideoDesktop;
    if (heroVideo) {
      heroVideo.play().catch(function(error) {
        console.log('Hero video auto-play prevented:', error);
      });
    }
  }

  // Function to handle intro video end
  function handleIntroVideoEnd() {
    activeIntroVideo.pause();
    introContainer.classList.add('hidden');
    
    // Remove from DOM after transition completes and start hero video
    setTimeout(function() {
      introContainer.style.display = 'none';
      document.body.classList.remove('playing-intro');
      startHeroVideo();
    }, 800);
  }

  // Add event listeners to both intro videos
  if (introVideoDesktop) {
    introVideoDesktop.addEventListener('ended', handleIntroVideoEnd);
    introVideoDesktop.addEventListener('error', function() {
      console.log('Intro video error, starting hero video');
      introContainer.classList.add('hidden');
      setTimeout(function() {
        introContainer.style.display = 'none';
        document.body.classList.remove('playing-intro');
      }, 800);
      startHeroVideo();
    });
  }

  if (introVideoMobile) {
    introVideoMobile.addEventListener('ended', handleIntroVideoEnd);
    introVideoMobile.addEventListener('error', function() {
      console.log('Intro video error, starting hero video');
      introContainer.classList.add('hidden');
      setTimeout(function() {
        introContainer.style.display = 'none';
        document.body.classList.remove('playing-intro');
      }, 800);
      startHeroVideo();
    });
  }

  // Start playing the intro video
  if (activeIntroVideo) {
    activeIntroVideo.play().catch(function(error) {
      console.log('Intro video auto-play prevented:', error);
      // If autoplay fails, hide intro and start hero
      handleIntroVideoEnd();
    });
  }
});

// VIDEO HERO FUNCTIONALITY SCRIPT
document.addEventListener('DOMContentLoaded', function() {
  const videoDesktop = document.getElementById('heroVideoDesktop');
  const videoMobile = document.getElementById('heroVideoMobile');
  const progressBar = document.getElementById('videoProgress');
  const playPauseBtn = document.getElementById('playPauseBtn');
  const muteBtn = document.getElementById('muteBtn');
  const playIcon = document.getElementById('playIcon');
  const pauseIcon = document.getElementById('pauseIcon');
  const muteIcon = document.getElementById('muteIcon');
  const unmuteIcon = document.getElementById('unmuteIcon');

  function getActiveVideo() {
    return window.innerWidth <= 768 ? videoMobile : videoDesktop;
  }

  let activeVideo = getActiveVideo();

  if (!activeVideo) return;

  function updateProgress() {
    activeVideo = getActiveVideo();
    if (activeVideo && progressBar) {
      const progress = (activeVideo.currentTime / activeVideo.duration) * 100;
      progressBar.style.width = progress + '%';
    }
  }

  if (videoDesktop) {
    videoDesktop.addEventListener('timeupdate', updateProgress);
  }
  if (videoMobile) {
    videoMobile.addEventListener('timeupdate', updateProgress);
  }

  if (playPauseBtn) {
    playPauseBtn.addEventListener('click', function() {
      activeVideo = getActiveVideo();
      if (!activeVideo) return;

      if (activeVideo.paused) {
        activeVideo.play();
        playIcon.style.display = 'none';
        pauseIcon.style.display = 'block';
      } else {
        activeVideo.pause();
        playIcon.style.display = 'block';
        pauseIcon.style.display = 'none';
      }
    });
  }

  if (muteBtn) {
    muteBtn.addEventListener('click', function() {
      activeVideo = getActiveVideo();
      if (!activeVideo) return;

      activeVideo.muted = !activeVideo.muted;
      if (activeVideo.muted) {
        muteIcon.style.display = 'block';
        unmuteIcon.style.display = 'none';
      } else {
        muteIcon.style.display = 'none';
        unmuteIcon.style.display = 'block';
      }
    });
  }

  window.addEventListener('resize', function() {
    activeVideo = getActiveVideo();
  });

  const scrollIndicator = document.getElementById('scrollIndicator');
  if (scrollIndicator) {
    scrollIndicator.addEventListener('click', function() {
      if (typeof gsap !== 'undefined') {
        gsap.to(window, {
          scrollTo: window.innerHeight,
          duration: 1,
          ease: "power2.inOut"
        });
      } else {
        window.scrollTo({
          top: window.innerHeight,
          behavior: 'smooth'
        });
      }
    });
  }
});
</script>

<script>
function setFullScreenHeight() {
  const introVideos = document.querySelectorAll('.intro-video');
  if (introVideos.length > 0) {
    const vh = window.innerHeight;
    introVideos.forEach(video => {
      video.style.height = `${vh}px`;
    });
  }
}

window.addEventListener('load', setFullScreenHeight);
window.addEventListener('resize', setFullScreenHeight);
window.addEventListener('orientationchange', setFullScreenHeight);
</script>

