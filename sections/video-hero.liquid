<style>
  #homepage-intro-video {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    z-index: 9999;
    margin: 0;
    padding: 0;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: opacity 0.8s ease;
    opacity: 1;
  }

  #homepage-intro-video.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .intro-video {
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    min-width: 100%;
    min-height: 100%;
    min-height: -webkit-fill-available;
    position: absolute;
    top: 0;
    left: 0;
  }

  .intro-video--desktop {
    display: block;
  }

  .intro-video--mobile {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .intro-video--desktop {
      display: none;
    }

    .intro-video--mobile {
      display: block;
    }

    .intro-video {
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
    }
  }

  body.playing-intro {
    overflow: hidden;
  }
</style>

<!-- HOMEPAGE INTRO VIDEO -->
{% if section.settings.intro_video_url_desktop != blank or section.settings.intro_video_url_mobile != blank %}
<div id="homepage-intro-video">
  {% if section.settings.intro_video_url_desktop != blank %}
