    </div>
    
  </div>
</div>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
(function() {
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSliders);
  } else {
    initSliders();
  }

  function initSliders() {
    if (typeof Swiper === 'undefined') {
      console.error('Swiper library not loaded');
      return;
    }

    // Count total slides for offset calculation
    const totalSlides = document.querySelectorAll('.categoryProductSwiper1 .swiper-slide').length;
    const offsetSlide = totalSlides > 2 ? Math.floor(totalSlides / 2) : 0;

    // Initialize LEFT Swiper with autoplay
    const swiper1 = new Swiper('.categoryProductSwiper1', {
      loop: true,
      effect: 'fade',
      fadeEffect: { crossFade: true },
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      speed: 900,
      grabCursor: true,
      touchRatio: 1,
      threshold: 5,
      preventClicks: true,
      a11y: { enabled: true }
    });

    // Initialize RIGHT Swiper with offset initialSlide
    const swiper2 = new Swiper('.categoryProductSwiper2', {
      loop: true,
      effect: 'fade',
      fadeEffect: { crossFade: true },
      initialSlide: offsetSlide, // Start from middle position
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      speed: 900,
      grabCursor: true,
      touchRatio: 1,
      threshold: 5,
      preventClicks: true,
      a11y: { enabled: true },
      // Firefox-specific fix: ensure autoplay starts
      on: {
        init: function() {
          // Force autoplay to start on Firefox
          if (this.autoplay && !this.autoplay.running) {
            this.autoplay.start();
          }
        }
      }
    });

    // Clickable slides (ignore buttons/links)
    document.querySelectorAll('.swiper-slide').forEach(slide => {
      slide.addEventListener('click', function(e) {
        if (
          e.target.tagName === 'A' ||
          e.target.tagName === 'BUTTON' ||
          e.target.closest('a') ||
          e.target.closest('button')
        ) return;

        const productUrl = this.getAttribute('data-product-url');
        if (productUrl) window.location.href = productUrl;
      });
    });
  }
})();
</script>

