<script>
  // Enhanced image cache for dynamic navigation images with preloading
  window.BP_NavImageCache = {
    imageCache: {},
    preloadedImages: {},
    fetchingPromises: {}, // Track ongoing fetch requests to prevent duplicates

    // Preload an image for instant display
    preloadImage(url) {
      if (!url || url === '' || this.preloadedImages[url]) return;

      const img = new Image();
      img.src = url;
      this.preloadedImages[url] = img;
      console.log('‚úì Preloaded:', url.substring(0, 60) + '...');
    },

    // Normalize subcategory names for better matching
    normalizeSubcategory(subcategory) {
      return decodeURIComponent(subcategory.replace(/\+/g, ' ')).toLowerCase().trim();
    },

    // Create handleized version (matches your filter code logic)
    handleize(text) {
      return text
        .toLowerCase()
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/^-+|-+$/g, '');
    },

    // Generate search variations for better matching
    generateSearchTerms(subcategory) {
      const normalized = this.normalizeSubcategory(subcategory);
      return [
        normalized,
        this.handleize(normalized),
        normalized.replace(/[^a-z0-9]/g, ''),
        normalized.replace(/\s+/g, '-'),
        normalized.replace(/\s+/g, ''),
        normalized.replace(/\//g, ''), // Handle "3/4" cases
      ];
    },

    // Fetch product image for subcategories with enhanced matching
    async fetchSubcategoryProductImage(collectionHandle, subcategory) {
      const cacheKey = `${collectionHandle}-${subcategory}`;

      // Return cached image if available
      if (this.imageCache[cacheKey]) {
        console.log('‚úì Cache hit:', cacheKey);
        return this.imageCache[cacheKey];
      }

      // Return ongoing fetch promise if already fetching
      if (this.fetchingPromises[cacheKey]) {
        console.log('‚è≥ Waiting for ongoing fetch:', cacheKey);
        return this.fetchingPromises[cacheKey];
      }

      console.log('üîç Fetching:', collectionHandle, '/', subcategory);

      // Create and store fetch promise
      this.fetchingPromises[cacheKey] = (async () => {
        try {
          const response = await fetch(`/collections/${collectionHandle}/products.json`);
          const data = await response.json();

          if (!data.products || data.products.length === 0) {
            console.warn('‚ö†Ô∏è No products found in collection:', collectionHandle);
            this.imageCache[cacheKey] = null;
            return null;
          }

          console.log(`üì¶ Found ${data.products.length} products`);

          const searchTerms = this.generateSearchTerms(subcategory);
          console.log('üîé Search terms:', searchTerms);

          // Enhanced matching with weighted scoring
          let matchingProduct = null;
          let highestScore = 0;

          for (const product of data.products) {
            let score = 0;
            const tags = (product.tags || []).map((tag) => tag.toLowerCase().trim());
            const productType = (product.product_type || '').toLowerCase().trim();
            const title = (product.title || '').toLowerCase().trim();
            const variants = product.variants || [];

            // Score-based matching (higher score = better match)
            for (const term of searchTerms) {
              // Exact tag match (highest priority)
              if (tags.includes(term)) {
                score += 100;
              }
              // Tag contains term
              else if (tags.some((tag) => tag.includes(term))) {
                score += 50;
              }

              // Product type exact match
              if (productType === term) {
                score += 80;
              }
              // Product type contains term
              else if (productType.includes(term)) {
                score += 40;
              }

              // Title contains term
              if (title.includes(term)) {
                score += 30;
              }

              // Variant option matching
              for (const variant of variants) {
                const options = [
                  (variant.option1 || '').toLowerCase().trim(),
                  (variant.option2 || '').toLowerCase().trim(),
                  (variant.option3 || '').toLowerCase().trim(),
                ];

                if (options.some((opt) => opt === term)) {
                  score += 60;
                } else if (options.some((opt) => opt.includes(term))) {
                  score += 20;
                }
              }
            }

            if (score > highestScore) {
              highestScore = score;
              matchingProduct = product;
            }
          }

          // Use best match or fallback to first product
          const product = matchingProduct || data.products[0];

          if (matchingProduct) {
            console.log(`‚úì MATCH (score: ${highestScore}):`, product.title);
          } else {
            console.log('‚ö†Ô∏è No match, using first product:', product.title);
          }

          // Get product image with fallback chain
          let imageUrl = null;

          // Priority 1: Variant-specific image
          if (product.variants) {
            for (const variant of product.variants) {
              if (variant.featured_image?.src) {
                imageUrl = variant.featured_image.src;
                break;
              }
              if (variant.image?.src) {
                imageUrl = variant.image.src;
                break;
              }
            }
          }

          // Priority 2: Product images array
          if (!imageUrl && product.images?.length > 0) {
            imageUrl = product.images[0].src || product.images[0];
          }

          // Priority 3: Featured image
          if (!imageUrl && product.featured_image) {
            imageUrl = product.featured_image;
          }

          if (imageUrl) {
            console.log('‚úì Image found:', imageUrl.substring(0, 60) + '...');
            this.imageCache[cacheKey] = imageUrl;
            this.preloadImage(imageUrl);
            delete this.fetchingPromises[cacheKey];
            return imageUrl;
          } else {
            console.warn('‚ö†Ô∏è No image found for:', product.title);
            this.imageCache[cacheKey] = null;
            delete this.fetchingPromises[cacheKey];
            return null;
          }
        } catch (error) {
          console.error('‚ùå Error fetching:', error);
          this.imageCache[cacheKey] = null;
          delete this.fetchingPromises[cacheKey];
          return null;
        }
      })();

      return this.fetchingPromises[cacheKey];
    },
  };
</script>

