<script>
  document.addEventListener('DOMContentLoaded', function () {
    const burger = document.getElementById('bp-burger');
    const menu = document.getElementById('bp-menu');
    const overlay = document.getElementById('bp-overlay');
    const menuTitle = document.getElementById('bp-menu-title');
    const mainBackArrow = document.getElementById('bp-back-arrow');
    const dropdowns = document.querySelectorAll('.bp-menu-dropdown');

    // Image cache reference
    const imageCache = window.BP_NavImageCache;

    // Track current displayed image to prevent flickering
    let currentCollectionImage = '';
    let currentApparelImage = '';

    function isMobile() {
      return window.innerWidth <= 1230;
    }

    // Burger menu toggle
    burger.addEventListener('click', () => {
      menu.classList.toggle('active');
      burger.classList.toggle('active');
      overlay.classList.toggle('active');
      document.body.style.overflow = menu.classList.contains('active') ? 'hidden' : '';
    });

    // Overlay click to close
    overlay.addEventListener('click', () => {
      closeAllMenus();
    });

    // Close all menus function
    function closeAllMenus() {
      menu.classList.remove('active');
      burger.classList.remove('active');
      overlay.classList.remove('active');
      document.body.style.overflow = '';
      mainBackArrow.classList.remove('show');
      dropdowns.forEach((dropdown) => {
        dropdown.classList.remove('active');
      });
      menuTitle.textContent = 'Menu';
    }

    // Function to display image with smooth transition
    function displayImage(imageUrl, title, imageElementId, titleElementId, trackingVar) {
      if (!imageUrl) {
        console.log('No image URL provided');
        return;
      }

      // Prevent re-displaying the same image
      if (trackingVar === 'collections' && currentCollectionImage === imageUrl) {
        return;
      }
      if (trackingVar === 'apparel' && currentApparelImage === imageUrl) {
        return;
      }

      const imgElement = document.getElementById(imageElementId);
      const titleElement = document.getElementById(titleElementId);
      const placeholder = imgElement.previousElementSibling;

      console.log('Displaying image:', imageUrl);
      console.log('Title:', title);

      // Hide placeholder
      if (placeholder && placeholder.classList.contains('bp-image-placeholder')) {
        placeholder.style.display = 'none';
      }

      // Fade out current image
      imgElement.classList.remove('active');

      // Wait for fade out, then change image
      setTimeout(() => {
        imgElement.src = imageUrl;
        titleElement.textContent = title;

        // Fade in new image
        setTimeout(() => {
          imgElement.classList.add('active');
        }, 50);
      }, 300);

      // Update tracking
      if (trackingVar === 'collections') {
        currentCollectionImage = imageUrl;
      } else if (trackingVar === 'apparel') {
        currentApparelImage = imageUrl;
      }
    }

    // Preload all collection images on page load for instant display
    function preloadAllCollectionImages() {
      console.log('=== PRELOADING COLLECTION IMAGES ===');
      const allCategoryBlocks = document.querySelectorAll('.bp-category-block[data-collection-image]');
      console.log('Found collection blocks:', allCategoryBlocks.length);

      allCategoryBlocks.forEach((block) => {
        const imageUrl = block.dataset.collectionImage;
        const collection = block.dataset.collection;
        console.log(`Collection: ${collection}, Image: ${imageUrl}`);

        if (imageUrl && imageUrl !== '' && !imageUrl.includes('null') && !imageUrl.includes('undefined')) {
          imageCache.preloadImage(imageUrl);
        } else {
          console.warn(`‚ö†Ô∏è No valid image for collection: ${collection}`);
        }
      });
    }

    // Call preload after a short delay to not block initial page load
    setTimeout(preloadAllCollectionImages, 100);

    // Setup hover listeners for Collections menu (main categories show collection images)
    const collectionsMenu = document.querySelector('[data-menu="Collections"]');
    if (collectionsMenu) {
      const categoryBlocks = collectionsMenu.querySelectorAll('.bp-category-block[data-collection]');
      console.log('Setting up Collections menu hover listeners for', categoryBlocks.length, 'blocks');

      categoryBlocks.forEach((block) => {
        block.addEventListener('mouseenter', function () {
          if (isMobile()) return;

          let imageUrl = this.dataset.collectionImage;
          const collectionHandle = this.dataset.collection;

          console.log('Hovered on collection:', collectionHandle);
          console.log('Image URL:', imageUrl);

          // Handle cases where Liquid might output empty or malformed URLs
          if (!imageUrl || imageUrl === '' || imageUrl.includes('null') || imageUrl.includes('undefined')) {
            console.warn('‚ö†Ô∏è No collection image found for:', collectionHandle);
            return;
          }

          const title = this.querySelector('.bp-category-title').textContent.trim();
          displayImage(imageUrl, title, 'collections-display-image', 'collections-image-title', 'collections');
        });
      });
    }

    // Setup hover listeners for Custom Apparel menu
    const apparelMenu = document.querySelector('[data-menu="Custom Apparel"]');
    if (apparelMenu) {
      const categoryBlocks = apparelMenu.querySelectorAll('.bp-category-block[data-collection]');
      console.log('Setting up Custom Apparel menu hover listeners for', categoryBlocks.length, 'blocks');

      categoryBlocks.forEach((block) => {
        const collectionHandle = block.dataset.collection;
        let subcategoriesPreloaded = false;

        // Hover on main category - show collection image and preload subcategories
        block.addEventListener('mouseenter', function () {
          if (isMobile()) return;

          let imageUrl = this.dataset.collectionImage;

          console.log('Hovered on apparel collection:', collectionHandle);
          console.log('Image URL:', imageUrl);

          // Handle cases where Liquid might output empty or malformed URLs
          if (!imageUrl || imageUrl === '' || imageUrl.includes('null') || imageUrl.includes('undefined')) {
            console.warn('‚ö†Ô∏è No collection image found for:', collectionHandle);
            return;
          }

          const title = this.querySelector('.bp-category-title a').textContent.trim();
          displayImage(imageUrl, title, 'apparel-display-image', 'apparel-image-title', 'apparel');
        });
      });
    }

    // Dropdown handling
    dropdowns.forEach((dropdown) => {
      const submenu = dropdown.querySelector('.bp-submenu');
      const submenuBackBtn = submenu ? submenu.querySelector('.bp-submenu-back') : null;
      const menuLink = dropdown.querySelector('.bp-menu-link');
      const menuSvg = menuLink ? menuLink.querySelector('svg') : null;

      // Handle SVG icon click to open dropdown (mobile only)
      if (menuSvg) {
        menuSvg.addEventListener('click', function (e) {
          if (!isMobile()) return;

          e.preventDefault();
          e.stopPropagation();

          dropdowns.forEach((d) => {
            if (d !== dropdown) {
              d.classList.remove('active');
            }
          });

          if (!dropdown.classList.contains('active')) {
            dropdown.classList.add('active');
            const title = dropdown.getAttribute('data-menu') || 'Submenu';
            menuTitle.textContent = title;
            mainBackArrow.classList.add('show');
          } else {
            dropdown.classList.remove('active');
            menuTitle.textContent = 'Menu';
            mainBackArrow.classList.remove('show');
          }
        });
      }

      // Submenu back button
      if (submenuBackBtn) {
        submenuBackBtn.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          dropdown.classList.remove('active');
          menuTitle.textContent = 'Menu';
          mainBackArrow.classList.remove('show');
        });
      }
    });

    // Main back arrow
    mainBackArrow.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      const activeDropdown = document.querySelector('.bp-menu-dropdown.active');
      if (activeDropdown) {
        activeDropdown.classList.remove('active');
        menuTitle.textContent = 'Menu';
        mainBackArrow.classList.remove('show');
      }
    });

    // Countdown Timer
    const timer = document.getElementById('bp-timer');

    function getNextEndTimeMST() {
      const now = new Date();
      const nowMST = new Date(now.toLocaleString('en-US', { timeZone: 'America/Denver' }));
      const endTimeMST = new Date(nowMST);

      endTimeMST.setHours(11, 0, 0, 0);

      const day = nowMST.getDay();

      if (day === 5 && nowMST.getTime() < endTimeMST.getTime()) {
        return endTimeMST;
      } else if (day === 5 && nowMST.getTime() >= endTimeMST.getTime()) {
        const daysUntilMonday = 3;
        endTimeMST.setDate(endTimeMST.getDate() + daysUntilMonday);
      } else if (day === 6 || day === 0) {
        const daysUntilMonday = (1 + 7 - day) % 7;
        endTimeMST.setDate(endTimeMST.getDate() + daysUntilMonday);
      } else {
        if (nowMST.getTime() >= endTimeMST.getTime()) {
          endTimeMST.setDate(endTimeMST.getDate() + 1);
        }
      }

      return endTimeMST;
    }

    let endTimeMST = getNextEndTimeMST();

    function updateTimer() {
      const now = new Date();
      const nowMST = new Date(now.toLocaleString('en-US', { timeZone: 'America/Denver' }));
      let diff = endTimeMST - nowMST;

      if (diff <= 0) {
        endTimeMST = getNextEndTimeMST();
        diff = endTimeMST - nowMST;
      }

      const h = String(Math.floor(diff / (1000 * 60 * 60))).padStart(2, '0');
      const m = String(Math.floor((diff / (1000 * 60)) % 60)).padStart(2, '0');
      const s = String(Math.floor((diff / 1000) % 60)).padStart(2, '0');

      timer.textContent = `${h}:${m}:${s}`;
    }

    updateTimer();
    setInterval(updateTimer, 1000);

    // Close menus on window resize
    window.addEventListener('resize', () => {
      if (window.innerWidth > 1230) {
        closeAllMenus();
      }
    });
  });
</script>

