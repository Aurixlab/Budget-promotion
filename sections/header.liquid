        box-shadow: 0 6px 20px rgba(255, 116, 28, 0.35);
        text-transform: uppercase;
        letter-spacing: 0px;
        position: relative;
        overflow: hidden;
      }
      .bp-countdown-btn span{
      color:#fff;
          line-height: 16px;
      }

      .bp-countdown-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s ease;
      }

      .bp-countdown-btn:hover::before {
        left: 100%;
      }

      .bp-countdown-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(255, 116, 28, 0.5);
      }

      .bp-countdown-btn:active {
        transform: translateY(-1px);
