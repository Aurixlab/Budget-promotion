      /* ======= TOP BAR ======= */
      .bp-topbar {
        background: #ff661f;
        color: #fff;
        padding: 0.75rem 0;
        z-index: 10;
        position: relative;
      }

      .bp-topbar-container {
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1.25rem;
      }

      .bp-social-links {
        display: flex;
        gap: 1.5rem;
        align-items: center;
      }

      .bp-social-links a {
        color: #fff;
        text-decoration: none;
        font-size: 1.5rem;
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
      }

      .bp-social-links a:hover {
        color: #000;
      }
    .bp-menu-link svg {
        width: 16px;
    }
      .bp-topbar-actions {
        display: flex;
        gap: 1rem;
        align-items: center;
      }

      .bp-topbar-actions a {
        color: #fff;
        text-decoration: none;
        font-size: 1.5rem;
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
      }

      .bp-topbar-actions a:hover {
        color: #000;
      }

      /* ======= BP NAVBAR ======= */
      #bp-header {
        position: fixed;
        top: 2.5rem;
        width: 100%;
        z-index: 999;
        transition: top 0.3s ease;
      }

      #bp-header.sticky {
        top: 0;
      }

      #bp-header.sticky nav.bp-navbar {
          margin-top: 0;
      }

      .bp-navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0rem 1rem 0rem 2rem;
        background: #fff;
        flex-wrap: wrap;
        margin: 32px 20px 0;
        box-shadow: 0px 7px 10px rgba(0, 0, 0, 0.25);
        border-radius: 92px;
        transition: margin-top 0.3s ease;
      }

      .bp-navbar-left,
      .bp-navbar-center,
      .bp-navbar-right {
        display: flex;
        align-items: center;
      }

      .bp-navbar-left {
        gap: 1rem;
        flex-direction: row-reverse;
      }

      section.bp-navbar-right {
        gap: 32px;
      }

      .bp-brand {
        display: flex;
        align-items: center;
      }

      .bp-brand img {
        width: 190px;
        height: auto;
      }

      /* Burger */
      .bp-burger {
        display: none;
        flex-direction: column;
        gap: 5px;
        cursor: pointer;
      }

      .bp-burger-line {
        width: 25px;
        height: 3px;
        background: #000;
        transition: all 0.3s ease;
      }

      .bp-burger.active .bp-burger-line:nth-child(1) {
        transform: rotate(45deg) translate(8px, 8px);
      }

      .bp-burger.active .bp-burger-line:nth-child(2) {
        opacity: 0;
      }

      .bp-burger.active .bp-burger-line:nth-child(3) {
        transform: rotate(-45deg) translate(7px, -7px);
      }

      /* Overlay */
      .bp-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
      }

      .bp-overlay.active {
        display: block;
      }

      /* Menu Layout */
      .bp-menu {
        display: flex;
        position: relative;
        justify-content: center;
      }

      .bp-menu-header {
        display: none;
      }

      .bp-menu-inner {
        display: flex;
        justify-content: center;
        list-style: none;
        gap: 1rem;
        margin: 0;
        padding: 0;
      }

      .bp-menu-item {
        position: static;
        margin: 0;
      }

      .bp-menu-link {
      cursor: pointer;
          color: #000 !important;
          font-weight: 600;
          text-transform: uppercase;
          text-decoration: none;
          display: flex;
          padding: 1.5rem 0;
          transition: color 0.3s ease;
          font-size: 1rem;
          user-select: none;
          align-items: center;
          gap: 5px;
      }
      li.bp-menu-item.bp-menu-dropdown svg path{
        transition: all 0.3s ease;
      }

      .bp-menu-item:hover > .bp-menu-link {
        color: #FF741C !important;
      }
      {% comment %} li.bp-menu-item.bp-menu-dropdown:hover svg path{
        fill: #FF741C !important;
      } {% endcomment %}
